doctype html
html
  head
    title Home
    script(src="/javascripts/main.js")
    link(rel="icon" href="/image/thankyou.jpg" type="image/x-icon")
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/tailwindcss@^2.2/dist/tailwind.min.css')
    link(rel='stylesheet' href='../styles/tailwind.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')
    link(rel="stylesheet",href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
   

  

  body
    include mixins
    if(User)
      +header('home',User)
    else
      +header("home")
    main(class='w-full mx-12 py-28 over-flow-y-scroll relative ')

      div(class='text-xl text-gray-700 flex-1  flex flex-wrap gap-3 mb-24 md:ml-2 w-full')
        if (products.length === 0)
          p(class= "text-gray-600 mt-40 mb-80 mr-20 w-full flex justify-center") Không có sản phẩm nào 
        each product in products
          +card(product)
   
      
        nav( class="w-full  absolute bottom-10 flex justify-center mr-4 no-underline" aria-label="..." id="pagination")
          ul(class="pagination mb-20 mr-32 ")
            li(class="page-item ")
              a(class="page-link" id="redt" href=(currentpage>1)?`/page/${currentpage-1}`:'#') Prev
            for page in [1,2,3,4,5]
              li(class="page-item pag linkpage" data-page=currentpage )
                a(class=((page<3&&((currentpage-1+5 >quanPage)?(quanPage-5+page)>2:(currentpage-1+page)>2))?" page-link focus:bg-red-500 data-current-page": " page-link focus:bg-red-500") href=`/page/${(currentpage-1+5 >quanPage)?(quanPage-5+page):(currentpage-1+page)}`  ) #{(currentpage-1+5 >quanPage)?(quanPage-5+page):(currentpage-1+page)}
           
            li(class="page-item")
              a(class="page-link" href=(currentpage<quanPage)?`/page/${currentpage+1}`:'#') Next


         
    +footer()
    +sider()
    +siderUser(User)
 




    


 
